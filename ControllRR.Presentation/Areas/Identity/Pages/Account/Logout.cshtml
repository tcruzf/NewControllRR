@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair do sistema";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <h2></h2>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Clique aqui para sair do sistema...</button>
            </form>
        }
        else
        {
            <p>Você se desconectou do sistema com sucesso!</p>
        }
    }
</header>
